#include <stdio.h>

int main() {
    int num,i ,n;

    printf("Enter the total number of elements: ");
    scanf("%d", &n);

    printf("Enter the numbers: \n");

    for (i = 0; i < n; i++) {
        scanf("%d", &num);
        if (num % 2 == 0) {
            printf("%d is even.\n", num);
        } else {
            printf("%d is odd.\n", num);
        }
    }

    return 0;
}
